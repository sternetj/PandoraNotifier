{
  "name": "Pandora Notifier",
  "version": "1.2.50",
  "description": "Adds a mini-player for Pandora",
  "icons": {
    "48": "pandora2.png"
  },
  "permissions": [
    "notifications", "activeTab", "*://*.pandora.com/*", "tabs"
  ],
  "options_page": "options.html",
  "manifest_version": 2,
  "web_accessible_resources": [
    "pandora2.png", "popout.html"
  ],
  "content_scripts": [{
    "matches": ["*://*.pandora.com/*"],
    "js": ["jquery.min.js", "background.js"]
  }],
  "background": {
    "scripts": ["jquery.min.js", "player.js"],
    "persistent": false
  }
}