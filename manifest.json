{
  "name": "Pandora Notifier",
  "version": "1.2.49",
  "description": "Shows off desktop notifications when Pandora song changes",
  "icons": {
    "48": "pandora2.png"
  },
  "permissions": [
    "notifications", "activeTab", "*://*.pandora.com/*", "tabs"
  ],
  "options_page": "options.html",
  "manifest_version": 2,
  "background": "test.js",

  // crbug.com/134315
  "web_accessible_resources": [
    "pandora2.png", "popout.html"
  ],
  "content_scripts": [{
    "matches": ["*://*.pandora.com/*"],
    "js": ["jquery.min.js", "background.js"]
  }],
  "background": {
    "scripts": ["jquery.min.js", "player.js"],
    "persistent": false
  }  
}